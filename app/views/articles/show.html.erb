<h1>Articles#show</h1>
<p>Find me in app/views/articles/show.html.erb</p>
<p>
  <b>Название новости:</b>
  <%=h @article.title %>
</p>

<p>
  <b>Текст:</b>
  <%=h @article.body %>
</p>

<p>
  <b>Дата публикации:</b>
  <%=h @article.created_at %>
</p>

<p>
  <b>Приоритет:</b>
  <%=h @article.priority %>
</p>

<p>
  <b>Изображение:</b>
  <%=h @article.image %>
</p>
<%= link_to 'Изменить', edit_article_path(@article) %> |
<%= link_to 'Назад', articles_path %>
<p>

  <% for comment in @article.comments %>
  <table>
  <tr>
      <td><%= comment.author_name %></td>
      <td><%= comment.author_email %></td>
      <td><%= comment.created_at %></td>
  </tr>
  <tr>
    <td colspan="3"><%= comment.body %></td>
  </tr>
  
</table>
<% end %>
</p>
<%= form_tag :action => "comment", :id => @article %><br>
<table>
  <tr>
    <td>Автор:</td>
    <td><%= text_field "comment", "author_name" %></td>
    <td>Email:</td>
    <td><%= text_field "comment", "author_email" %></td>
  </tr>
  <tr>
    <td colspan="4"><%= text_area "comment", "body" %></td>
  </tr>
  <tr>
    <td colspan="4" align="right"><%= submit_tag "Comment!"  %></td>
  </tr>
</table>
</form>