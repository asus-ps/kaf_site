<h1>Добавление новости</h1>
<p>Find me in app/views/articles/new.html.erb</p>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    Название:<br />
    <%= f.text_field :title %>
  </p>
  <p>
    Текст<br />
    <%= f.text_area :body %>
  </p>
  <!--p>
    Дата публикации:<br />
    <!--%= f.datetime_select(:published_at,:default => Time.now, :disabled => true) %>
  </p-->
  <p>
    Приоритет:<br />
    <%= f.text_field :priority %>
  </p>
  <p>
    Изображение<br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.submit 'Добавить' %>
  </p>
<% end %>

<%= link_to 'Назад', articles_path %>