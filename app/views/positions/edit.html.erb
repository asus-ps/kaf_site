<h1>Positions#edit</h1>
<p>Find me in app/views/positions/edit.html.erb</p>
<p>
  <% form_for (@newposition) do |f| %>
    <% f.error_messages %>
<p>
<table>
  <tr>
    <td>Полное название:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Сокращённое название:</td>
    <td><%= f.text_field :short_name %></td>
  </tr>
  <tr>
    <td></td>
    <td align="right"><%= f.submit 'Изменить' %></td>
  </tr>
</table>

</p>
  <% end %>
</p>
<p>
<table>
  <tr>
    <th>Индекс</th>
    <th>Должность</th>
    <th>Сокращение</th>
  </tr>

  <% @positions.each do |p| %>
    <tr>
      <td><%=h p.id %> </td>
      <td><%=h p.name %> </td>
      <td><%=h p.short_name %> </td>
      <td><%= link_to 'Edit', edit_position_path(p) %></td>
      <td><%= link_to 'Destroy', p, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
</p>