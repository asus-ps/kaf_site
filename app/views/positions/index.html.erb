<h1>Positions#index</h1>
<p>Find me in app/views/positions/index.html.erb</p>

<p>
  <% form_for (@newposition) do |f| %>
    <% f.error_messages %>
<p>
  <%= f.text_field :name %>
  <br>
  <%= f.text_field :short_name %>

    <%= f.submit 'Добавить' %>


</p>
  <% end %>
</p>

<p>
<table>
  <tr>
    <th>Индекс</th>
    <th>Должность</th>
    <th>Сокращение</th>
  </tr>

  <% @positions.each do |p| %>
    <tr>
      <td><%=h p.id %> </td>
      <td><%=h p.name %> </td>
      <td><%=h p.short_name %> </td>
      <td><%= link_to 'Edit', edit_position_path(p) %></td>
      <td><%= link_to 'Destroy', p, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
</p>