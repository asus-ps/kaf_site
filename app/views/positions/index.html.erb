<h1>Positions#index</h1>
<p>Find me in app/views/positions/index.html.erb</p>

<p>
  <% form_for (@newposition) do |f| %>
    <% f.error_messages %>
<p>
<table>
  <tr>
    <td>Полное название:</td>
    <td>Сокращённое название:</td>
  </tr>
  <tr>
    <td><%= f.text_field :name %></td>
    <td><%= f.text_field :short_name %></td>
    <td align="left"><%= f.submit 'Добавить' %></td>
  </tr>
</table>

</p>
  <% end %>
</p>

<p>
<table>
  <tr>
    <th>Индекс</th>
    <th>Должность</th>
    <th>Сокращение</th>
  </tr>

  <% @positions.each do |p| %>
    <tr>
      <td><%=h p.id %> </td>
      <td><%=h p.name %> </td>
      <td><%=h p.short_name %> </td>
      <td><%= link_to 'Редактировать', edit_position_path(p) %></td>
      <td><%= link_to 'Удалить', p, :confirm => 'Удалить запись?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
</p>