<h1>Список специальностей</h1>

<% form_tag manage_specialities_path, :method => 'get' do %>
  <p>
    <%=  text_field_tag :search,params[:search] %>
    <%= submit_tag 'Поиск', :name => nil %>
  </p>
<% end %>
<table>
  <tr>
    <th>Код</th>
    <th>Название</th>
    <th>Сокращение</th>
    <th>Количество лет обучения</th>
    <th>По диплому</th>
  </tr>

  <% @specialities.each do |s| %>
  <tr>
    <td><%=h s.code %></td>
    <td><%=h s.name %></td>
    <td><%=h s.short_name %></td>
    <td><%=h s.count_years %></td>
    <td><%=h s.in_diploma %></td>
    <td><%= link_to 'Редактировать', edit_manage_speciality_path(s) %></td>
    <td><%= link_to 'Удалить', manage_speciality_path(s), :confirm => 'Удалить запись?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<%= link_to 'Добавить специальность', new_manage_speciality_path %>