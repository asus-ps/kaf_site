<h1>Список специальностей</h1>

<%= render :partial => 'manage/shares/search_form',:locals => { :path => manage_specialities_path } %>
<table class="TableSimple">
  <tr>
    <th>Код</th>
    <th>Название</th>
    <th>Сокращение</th>
    <th  width="50px">Количество лет обучения</th>
    <th>Учёная степень</th>
  </tr>

  <% @specialities.each do |s| %>
  <tr>
    <td><%=h s.code %></td>
    <td><%=h s.name %></td>
    <td><%=h s.short_name %></td>
    <td align="center"><%=h s.count_years %></td>
    <td><%=h s.in_diploma %></td>
    <td><%= link_to 'Редактировать', edit_manage_speciality_path(s) %></td>
    <td><%= link_to 'Удалить', manage_speciality_path(s), :confirm => 'Удалить запись?', :method => :delete %></td>

  </tr>
<% end %>
</table>
<%= will_paginate %>
<%= link_to 'Добавить специальность', new_manage_speciality_path %>