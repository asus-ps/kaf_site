<h1>Изменение контактной информации</h1>
<p>Find me in app/views/contacts/edit.html.erb</p>

<% form_for([:manage,@contact]) do |c| %>
  <%= c.error_messages %>

<table>
  <tr>
    <td>Адрес:</td>
    <td><%= c.text_field :address %></td>
  </tr>
  <tr>
    <td>Телефоны:</td>
    <td><%= c.text_field :phones %></td>
  </tr>
  <tr>
    <td>E-mail:</td>
    <td><%= c.text_field :email %></td>
  </tr>
  <tr>
    <td>Сайт:</td>
    <td><%= c.text_field :url %></td>
  </tr>
  <tr>
    <td>Изображение:</td>
    <td><%= c.text_field :image %></td>
  </tr>
  <tr>
    <td></td>
    <td align="right"><%= c.submit 'Изменить' %></td>
  </tr>
</table>

<% end %>