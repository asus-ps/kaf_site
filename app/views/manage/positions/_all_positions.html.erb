<table>
  <tr>
    <th>№</th>
    <th>Должность</th>
    <th>Сокращение</th>
  </tr>

  <% @positions.each do |p| %>
    <tr>
      <td><%=h p.id %> </td>
      <td><%=h p.name %> </td>
      <td><%=h p.short_name %> </td>
      <td><%= link_to 'Редактировать', edit_manage_position_path(p) %></td>
      <td><%= link_to 'Удалить', manage_position_path(p), :confirm => 'Удалить запись?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
