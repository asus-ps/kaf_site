<h1>Должности | Изменить</h1>

<p>
  <% form_for ([:manage,@newposition]) do |f| %>
    <% f.error_messages %>
<p>
<table>
  <tr>
    <td>Полное название:</td>
    <td>Сокращённое название:</td>
  </tr>
  <tr>
    <td><%= f.text_field :name %></td>
    <td><%= f.text_field :short_name %></td>
    <td align="left"><%= f.submit 'Изменить' %></td>
  </tr>
</table>

</p>
  <% end %>
</p>
<p style="color: red"><%= notice %></p>
<%= link_to 'Назад', manage_positions_path %>
<p>
<table>
  <tr>
    <th>№</th>
    <th>Должность</th>
    <th>Сокращение</th>
  </tr>

  <% @positions.each do |p| %>
    <tr>
      <td><%=h p.id %> </td>
      <td><%=h p.name %> </td>
      <td><%=h p.short_name %> </td>
      <td><%= link_to 'Редактировать', edit_manage_position_path(p) %></td>
      <td><%= link_to 'Удалить', manage_position_path(p), :confirm => 'Удалить запись?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
</p>