<h1>Список дисциплин | Измененить</h1>

<p>
  <% form_for ([:manage,@newdiscipline]) do |f| %>
    <% f.error_messages %>
<p>
  Название дисциплины:
  <%= f.text_field :name %>
  <%= f.submit 'Изменить' %>
</p>
  <% end %>
</p>
<p style="color: red"><%= notice %></p>
<%= link_to 'Назад', manage_disciplines_path %>
<p>

<table>
  <tr>
    <th>Индекс</th>
    <th>Название дисциплины</th>
  </tr>

  <% @disciplines.each do |d| %>
    <tr>
      <td><%=h d.id %> </td>
      <td><%=h d.name %> </td>
      <td><%= link_to 'Редактировать', edit_manage_discipline_path(d) %></td>
      <td><%= link_to 'Удалить', manage_discipline_path(d), :confirm => 'Удалить запись?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
</p>