<h1>Diplomas#show</h1>
<p>Find me in app/views/diplomas/show.html.erb</p>

<table>
  <tr>
    <td>Название</td>
    <td><%=h @diploma.name %></td>
  </tr>
  <tr>
    <td>Исполнитель:</td>
    <td><%=h "#{@diploma.student.person.last_name} #{@diploma.student.person.first_name} #{@diploma.student.person.patronymic_name}" %></td>
  </tr>
  <tr>
    <td>Группа:</td>
    <td><%=h @diploma.student.speciality.short_name %></td>
  </tr>
  <tr>
    <td>Руководитель:</td>
    <td><%=h "#{@diploma.teacher.person.last_name} #{@diploma.teacher.person.first_name} #{@diploma.teacher.person.patronymic_name}" %></td>
  </tr>
  <tr>
    <td>Год:</td>
    <td><%=h @diploma.protection_year %></td>
  </tr>
  <tr>
    <td>Аннотация:</td>
    <td><%=h @diploma.summary %></td>
  </tr>
</table>
<%= link_to 'Редактировать', edit_diploma_path(@diploma) %> | 
<%= link_to 'Назад', diplomas_path %>