
<table class="tableNews" width="100%" style="background-color: #d2fce3; padding: 10px;" >
  <tr>
    <td style="max-width: 250px; width: 3%;"><%= link_to((article.picture_ext.nil? ) ? () : (image_tag(article.picture_path, :width => '250px')), article.picture_path) %></td>
    <td style="width: 100%;">
      <h1 style="text-align: center"><%= article.title %></h1>
      <h2 style="text-align: right"><%= "Опубликовано #{Russian::strftime(article.created_at,'%d.%m.%Y в %H:%M')}" %></h2>
    </td>
  </tr>
  <tr>
    <td colspan="2"><%=  Maruku.new(article.body).to_html %></td>
  </tr>
</table>

