<h3 style="text-align: center;">Архив новостей</h3>
<% articles.each do |n| %>
      <table class="tableNews">
        <tr>
          <td class="NewsTdTop" colspan="2"><%=  n.title %> </td>
        </tr>
        <tr>
          <td><%= (n.picture_ext.nil? ) ? (image_tag('no.gif', :width => '150px')) : (image_tag(n.picture_path, :width => '150px'))  %> </td>
          <td class="NewsTdBody" colspan="2"><%=  Maruku.new("#{n.body.chars.first(400)}...").to_html %> </td>
        </tr>
        <tr>
          <td class="NewsTdBotLeft" style="width: 150px;"> <%= link_to 'Читать полностью', :controller => 'news', :action => 'show',:id => n %> </td>
          <td  class="NewsTdBot"><%=  "#{Russian::strftime(n.created_at,'%d %B %Y | %H:%M')}" %> </td>
        </tr>
      </table>

<%  end %>
<%= will_paginate articles %>
