<p>Find me in app/views/degrees/index.html.erb</p>
<p>
  <% form_for (@newdegree) do |f| %>
    <% f.error_messages %>
<p>
<table>
  <tr>
    <td>Учёная степень:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Сокращение:</td>
    <td><%= f.text_field :short_name %></td>
  </tr>
  <tr>
    <td></td>
    <td align="right"><%= f.submit 'Добавить' %></td>
  </tr>
</table>
</p>
  <% end %>
</p>

<p>
<table>
  <tr>
    <th>Индекс</th>
    <th>Степень</th>
    <th>Сокращение</th>
  </tr>

  <% @degrees.each do |d| %>
    <tr>
      <td><%=h d.id %> </td>
      <td><%=h d.name %> </td>
      <td><%=h d.short_name %> </td>
      <td><%= link_to 'Edit', edit_degree_path(d) %></td>
      <td><%= link_to 'Destroy', d, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <%  end %>
</table>
