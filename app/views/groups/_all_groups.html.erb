
<h2 style="text-align: center;">Группы</h2>
    

      <% @specialities.each do |s| %>
          <table class="tableGroups">
          <tr>
            <th style="text-align: left;"> <%=  s.short_name %> </th>
            <% (1..(s.count_years)).each do |i|  %>

            <td><%= link_to("курс #{i}", students_from_group_path(s,(Time.now.year - i))) %></td>
          
        <% end %>
        </tr>
      </table>
      <% end %>

