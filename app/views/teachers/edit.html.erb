<h1>Teachers#edit</h1>
<p>Find me in app/views/teachers/edit.html.erb</p>

<% form_for @teacher do |f| %>
  <%= f.error_messages %>

  <% f.fields_for :person do |per| %>
  <p>
    Фамилия
    <%=h per.text_field :last_name %>

    Имя
    <%=h per.text_field :first_name %>

    Отчество
    <%=h per.text_field :patronymic_name %>
  </p>
  <p>
    День рождения:<br />
    <%=h per.date_select :birthday %>
  </p>
  <p>
    Преподаватель или студент:<br />
    <%=h per.text_field :nature %>
  </p>
    <p>
    Телефон:
    <%=h per.text_field :phone %>

    E-mail:
    <%=h per.text_field :email %>
  </p>
  <p>
    Фото:<br />
    <%=h per.text_field :photo %>
  </p>
  <p>
    Информация:<br />
    <%=h per.text_area :info %>
  </p>
  <% end %>

  <p>
    Должность:<br />
    <%=h f.select(:position_id, options_from_collection_for_select(@positions, "id", "name", selected_value=@teacher.position.id)) %>
  </p>
  <p>
    Должность:<br />
    <%=h f.select(:degree_id, options_from_collection_for_select(@degrees, "id", "name", selected_value=@teacher.degree.id)) %>
  </p>

  <p>
    <%= f.submit 'Изменить' %>
  </p>
<% end %>

<%= link_to 'Назад', teachers_path %>