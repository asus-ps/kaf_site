<h1>Specialities#edit</h1>
<p>Find me in app/views/specialities/edit.html.erb</p>

<% form_for(@speciality) do |f| %>
  <%= f.error_messages %>
<table>
  <tr>
    <td>Код:</td>
    <td><%= f.text_field :code %></td>
  </tr>
  <tr>
    <td>Название:</td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>Сокращение:</td>
    <td><%= f.text_field :short_name %></td>
  </tr>
  <tr>
    <td>Количество лет:</td>
    <td><%= f.select(:count_years, 1..6,:prompt => @speciality.count_years) %></td>
  </tr>
  <tr>
    <td>По диплому:</td>
    <td><%= f.text_field :in_diploma %></td>
  </tr>
  <tr>
    <td></td>
    <td align="right"><%= f.submit 'Изменить' %></td>
  </tr>
  </table>
<% end %>

<%= link_to 'Назад', specialities_path %>